<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kockadobás játék!"
        android:textSize="30dp"
        android:textAlignment="center"
        android:id="@+id/Cim"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Játékos"
        android:textSize="20dp"
        android:id="@+id/Jatekos"
        android:layout_below="@+id/Cim"
        />

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/JatekosKocka"
         app:srcCompat="@drawable/kocka3"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gép"
            android:textSize="20dp"
            android:id="@+id/Gep"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/GepKocka"
            app:srcCompat="@drawable/kocka3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eredmény: Gép - 0 Játékos - 0"
            android:textSize="24dp"
            android:id="@+id/Eredmeny"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dobás"
            android:id="@+id/Dobas"
            android:background="@color/colorAccent"
            ></Button>

    </LinearLayout>

</RelativeLayout>